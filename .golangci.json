{
	"linters": {
		"enable": [
			"deadcode",
			"misspell",
			"typecheck",
			"varcheck",
			"gofmt",
			"structcheck",
			"govet"
			
		],
		"disable":[
			"unused",
			"ineffassign",
			"staticcheck",
			"errcheck",
			"gosimple"
		]
	},
	"linters-settings": {
		"govet":{
			"check-shadowing":false
		},
		"errcheck":{
			"ignore": "fmt:.*,io/ioutil:^Read.*",
			"exclude": "scripts/errcheck_excludes.txt"
		}
	},
	"run": {
		"tests": false,
        "deadline": "10m",
		"max-issues-per-linter": 0
	},
	"issues":{
		"exclude-rules":[
			{   
				"linters":"ineffassign",
				"text":"err"
			}
		]
	}
	
}